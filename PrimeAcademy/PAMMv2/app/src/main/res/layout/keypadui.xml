                    android:text="."
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:fontFamily="@font/gloria_hallelujah"
                    android:textColor="#ffa500"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="handleKeypadNum"/>

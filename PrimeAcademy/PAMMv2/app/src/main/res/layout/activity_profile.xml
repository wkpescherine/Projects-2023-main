<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical"
    android:background="@drawable/chalkboard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pusername"
            android:text="USERNAME"
            android:textColor="#ffa500"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/gloria_hallelujah"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#ffa500"
            android:textColor="#555"
            android:fontFamily="@font/gloria_hallelujah"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffa500"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pSolved"
            android:text="Total Correct Answers: 0"
            android:fontFamily="@font/gloria_hallelujah"
            android:textColor="#ffa500"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pAsked"
            android:text="Total Questions Answers: 0"
            android:fontFamily="@font/gloria_hallelujah"
            android:textColor="#ffa500"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pHighestTier"
            android:text="Highest Tier: 0"
            android:fontFamily="@font/gloria_hallelujah"
            android:textColor="#ffa500"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pPercent"
            android:text="Percent Correct Answers: 0"
            android:fontFamily="@font/gloria_hallelujah"
            android:textColor="#ffa500"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q20High"
            android:text="20 Question High Score: 0"
            android:fontFamily="@font/gloria_hallelujah"
            android:textColor="#ffa500"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="resetData"
        android:layout_gravity="center"
        android:backgroundTint="#ffa500"
        android:textColor="#555"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Reset" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="backToDashboard"
        android:layout_gravity="center"
        android:backgroundTint="#ffa500"
        android:textColor="#555"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Back to Dashboard" />

</LinearLayout>